<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success" type="button">Nova Categoria</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <div class = "d-flex justify-content-between">
                <h4>{{name}}</h4>
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <a><button class="btn btn-danger">Deletar</button></a>
                </form>
            </div>
            <small>{{slug}}</small>
            <br>
            <div class="d-flex justify-content-between">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>
                <small class="mt-5">{{date}}</small>
            </div>
            
        </div>
    </div>
{{else}}
        <hr class="mt-3">
        <h4 class="text-secondary text-center">Nenhuma categoria registrada</h4>
{{/each}}
