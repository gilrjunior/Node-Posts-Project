{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>    
{{else}}

{{/each}}
<h3>Editar Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label class="mt-2 mb-2" for="nome">Nome: </label>
            <input type="text" name="nome" placeholder="Nome da categoria" class="form-control" value="{{categoria.name}}">
            <label class="mt-2 mb-2" for="slug">Slug: </label>
            <input type="text" name="slug" placeholder="Slug da Categoria" class="form-control" value="{{categoria.slug}}"> 

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                <button type="submit" class="btn btn-success" type="button">Editar Categoria</button>
            </div>

        </form>

    </div>

</div>

